\begin_layout Title
Backward Propogation
\end_layout

\begin_layout Standard
Overview of forward propagation equations:
\begin_inset Formula 
\begin{eqnarray*}
\mathbf{x} & = & \mathbf{a}^{\left(1\right)}=\begin{bmatrix}a_{1}^{\left(1\right)} & a_{2}^{\left(1\right)} & a_{3}^{\left(1\right)} & a_{4}^{\left(1\right)}\end{bmatrix}\,\,\,\,input\,layer\\
\mathbf{z}^{\left(2\right)} & = & \mathbf{W}^{\left(1\right)}\mathbf{x}+\mathbf{b}^{\left(1\right)}=\begin{bmatrix}z_{1}^{\left(2\right)} & z_{2}^{\left(2\right)}\end{bmatrix}\,\,\,\,neuron\,value\,at\,hidden\,layer\,1\\
\mathbf{a}^{\left(2\right)} & = & f\left(\mathbf{z}^{\left(2\right)}\right)=\begin{bmatrix}a_{1}^{\left(2\right)} & a_{2}^{\left(2\right)}\end{bmatrix}\,\,\,\,activation\,value\,at\,hidden\,layer\,1\\
\mathbf{z}^{\left(3\right)} & = & \mathbf{W}^{\left(2\right)}\mathbf{a}^{\left(2\right)}+\mathbf{b}^{\left(2\right)}=\begin{bmatrix}z_{1}^{\left(3\right)} & z_{2}^{\left(3\right)}\end{bmatrix}\,\,\,\,neuron\,value\,at\,hidden\,layer\,2\\
\mathbf{a}^{\left(3\right)} & = & f\left(\mathbf{z}^{\left(2\right)}\right)=\begin{bmatrix}a_{1}^{\left(3\right)} & a_{2}^{\left(3\right)}\end{bmatrix}\,\,\,\,activation\,value\,at\,hidden\,layer\,2\\
\mathbf{s} & = & \mathbf{W}^{\left(3\right)}\mathbf{a}^{\left(3\right)}=\begin{bmatrix}s_{1}\end{bmatrix}\,\,\,\,output\,value\,predicted\,by\,output\,layer
\end{eqnarray*}

\end_inset


\end_layout

